{
  "name": "review.js-vscode",
  "author": "yfakariya",
  "private": false,
  "version": "0.20.0",
  "description": "ReVIEW implementation by JavaScript for VSCode plugin.\nThis is forked version from vvakame/review.js",
  "main": "./index",
  "bin": {
    "reviewjs": "./bin/reviewjs"
  },
  "scripts": {
    "setup": "npm run clean",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "npm run eslint && npm run pegjs && npm run esbuildMain && npm run esbuildMainMinify",
    "pretest": "npm run build && npm run esbuildTest",
    "test": "mocha test/suite/indexSpec.js --require test/scriptHelpers/enable-power-assert.js",
    "preversion": "npm run test",
    "clean": "rimraf lib/**/*.js lib/**/*.d.ts lib/**/*.js.map test/*.js test/suite/**/*.js test/suite/**/*.js.map test/suite/**/*.d.ts resources/grammar.js --glob",
    "eslint": "eslint .",
    "pegjs": "pegjs --output resources/grammar.js resources/grammar.pegjs",
    "esbuildMain": "esbuild lib/index.js --outfile=dist/review.js --bundle --format=cjs --platform=node",
    "esbuildMainMinify": "esbuild dist/review.js --outfile=dist/review.min.js --minify",
    "esbuildTest": "esbuild test/suite/indexSpec.js --outfile=test/test.js --bundle --format=cjs --platform=node"
  },
  "keywords": [
    "ReVIEW"
  ],
  "license": "MIT",
  "homepage": "https://github.com/yfakariya/review.js-vscode",
  "repository": {
    "type": "git",
    "url": "git@github.com:yfakariya/review.js.git"
  },
  "bugs": {
    "url": "https://github.com/yfakariya/review.js-vscode/issues"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "commandpost": "^1.4.0",
    "js-yaml": "^4.1.0",
    "sprintf-js": "^1.1.3",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/glob": "^8.1.0",
    "@types/jquery": "^3.5.31",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.9",
    "@types/node": "^20.14.8",
    "@types/power-assert": "^1.5.12",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "benchmark": "^2.1.4",
    "esbuild": "^0.24.0",
    "eslint-plugin-jsdoc": "^50.3.2",
    "espower-loader": "^1.2.2",
    "glob": "^11.0.0",
    "mocha": "^10.7.3",
    "pegjs": "^0.10.0",
    "power-assert": "^1.6.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  }
}
